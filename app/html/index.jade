doctype
html(ng-app='app' ng-controller='main')

  head
    block vars
        - path="./"
        - var activeNav="home"
    meta(charset="utf-8")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width")
    title Mocco Art
    base(href="test.com" target="_self")
    //base(href="http://pepelazz.github.io/RusCatSite/" target="_self")
    link(href='http://fonts.googleapis.com/css?family=Roboto:100,400,500,400italic,700&subset=cyrillic-ext,latin' rel='stylesheet' type='text/css')
    block styles
        link(href="#{path}index.css" rel="stylesheet")
        link(href="#{path}libs/normalize.css" rel="stylesheet")
  body(id='screen-#{activeNav}')
    .content
        .sidebar
            a(href='/')
                img(src='./images/logo.svg').logo
            ul.nav
                li
                    a(href='./gallery.html') картины
                li
                    a(href='') события
        .main-area
          block content






    img(src='./images/house-in-sea.jpg').house-in-sea
    .footer
        img(src='./images/girl-sea.png').girl-sea



  block scripts
      script(src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js")
      script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.4/angular.js")
      script(src="#{path}libs/imagesloaded.pkgd.min.js")
      script(src="#{path}app.js")



